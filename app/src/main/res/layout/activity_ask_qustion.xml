<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagetictac01"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.tictactoegamerobot.AskQustionActivity">

    <Button
        android:id="@+id/b1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/buttoncolour"
        android:padding="5dp"
        android:text="Single Player"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/buttoncolour"
        android:padding="5dp"
        android:text="Double Plyer"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="50dp"
        android:background="@drawable/startbutton"
        android:text="Let's Start"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/startbutton"
            android:padding="5dp"
            android:src="@drawable/baseline_star_rate_24" />


        <ImageView
            android:id="@+id/shear"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/startbutton"
            android:padding="5dp"
            android:src="@drawable/baseline_share_24" />

        <ImageView
            android:id="@+id/policy"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/startbutton"
            android:padding="5dp"
            android:src="@drawable/baseline_privacy_tip_24" />

        <ImageView
            android:id="@+id/consol"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/startbutton"
            android:padding="5dp"
            android:src="@drawable/baseline_more_24" />

    </LinearLayout>


</LinearLayout>